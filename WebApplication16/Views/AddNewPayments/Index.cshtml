@model IEnumerable<WebApplication16.Models.AddNewPayment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContributionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContributionPrivilege)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContributionDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionPrivilege)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
